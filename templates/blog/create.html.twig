{% extends 'base.html.twig' %}

{% block body %}

    <h1>Création d'une nouvelle figure !</h1>

    <form action="" method="post">
        <input type="text" name="name" placeholder="Nom de la figure">
        <input type="text" name="category" placeholder="Catégorie de la figure">
        <textarea name="content" placeholder="Contenu de l'article"></textarea>
        <input type="text" name="image" placeholder="Image de l'article">
        <input type="text" name="video" placeholder="Video de l'article">
        <button type="submit">Enregistrer la figure</button>
    </form>
{% endblock %}